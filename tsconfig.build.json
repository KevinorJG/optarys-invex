{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "paths": {
      "@models/*": [
        "src/infrastructure/context/models/*"
      ],
      "@contexts/*": [
        "src/infrastructure/context/*"
      ],
      "@services/*": [
        "src/application/services/*"
      ],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts"
  ]
}